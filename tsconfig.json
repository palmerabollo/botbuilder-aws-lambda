{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": false,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "target": "es2015",
    "sourceMap": true,
    "skipLibCheck": true
  },
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
